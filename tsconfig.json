{
    "compilerOptions": {
      "lib": ["es2023"],
      "module": "node16",
      "target": "es2022",
  
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "moduleResolution": "node16",
      "resolveJsonModule": true,
      "useUnknownInCatchVariables":false,
      "outDir": "./dist",
      "rootDir": "./src",
      "types": ["jest"]
    },
    "include": [
      "src/**/*.ts"
    ],
    "exclude": [
      "node_modules",
      "src/test/*.ts"
    ]
  }
  